<%- include('../partials/header'); -%>
<h2>Question: <%= question.title %> <% question.createdAt %> </h2>

<div class="container mt-5">
  <div class="row d-flex justify-content-center">
    <div class="col-md-8">
      <div class="headings d-flex justify-content-between align-items-center mb-3">
        <h5>Unread comments(6)</h5>

        <div class="buttons">
          <span class="badge bg-white d-flex flex-row align-items-center">
            <span class="text-primary">Comments "ON"</span>
            <div class="form-check form-switch">
              <input class="form-check-input" type="checkbox" id="flexSwitchCheckChecked" checked />
            </div>
          </span>
        </div>
      </div>

      <% question.comments.forEach(function(q) { %>
      <div class="card p-3">
        <div class="d-flex justify-content-between align-items-center">
          <div class="user d-flex flex-row align-items-center">
            <img src="https://i.imgur.com/hczKIze.jpg" width="30" class="user-img rounded-circle mr-2" />
            <span
              ><small class="font-weight-bold text-primary"><%=q.user ? q.user.username : 'guest' %></small>
              <small class="font-weight-bold"><%= q.title %></small></span
            >
          </div>

          <small><% q.updatedAt %> </small>
        </div>

        <div class="action d-flex justify-content-between mt-2 align-items-center">
          <div class="reply px-4">
            <small>Remove</small>
            <span class="dots"></span>
            <small>Reply</small>
            <span class="dots"></span>
            <small>Translate</small>
          </div>

          <div class="icons align-items-center">
            <i class="fa fa-star text-warning"></i>
            <i class="fa fa-check-circle-o check-icon"></i>
          </div>
        </div>
      </div>
<% }); %>


    </div>
  </div>
</div>

<form class="mx-6" action="/questions/<%=question.id%>/comments" method="post">
  <!-- <div class="form-group">
      <label for="exampleFormControlInput1">Email address</label>
      <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com">
    </div>
    -->
  <div class="form-group">
    <label for="exampleFormControlTextarea1">Comment</label>
    <textarea class="form-control" id="exampleFormControlTextarea1" name="title" rows="3"></textarea>
    <button type="submit" class="btn btn-primary mb-3 mt-1">Send</button>
  </div>
</form>

<%- include('../partials/footer'); -%>
